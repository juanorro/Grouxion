<div class="wrapper-following">
    <div class="following-container">
        <div class="following-title">Following</div>

            {{#each this.follows as |follow|}}
            <div class="following-single">

                <div class="following-img">
                    <img src="{{follow.user.profileimg}}" >
                </div>

                <div class="following-names-container">
                    <div class="following-name">
                        {{follow.user.name}}
                    </div>

                    <div class="following-username">
                        {{follow.user.username}}
                    </div>
                </div>

                <div class="following-ver">
                    <a href="/users/{{follow.user.id}}">Ver</a>
                </div>
            </div>
            {{/each}}
        
    </div>
</div>